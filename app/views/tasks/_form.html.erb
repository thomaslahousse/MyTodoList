<%= form_for(task) do |f| %>
<% if task.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

    <ul>
        <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>

<div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
</div>

<div class="field">
    <%= f.label :status %>
    <%= f.check_box :status %>
</div>

<div class="field">
    <%= f.label :author_id %>
    <%= f.collection_select :author_id, Author.all, :id, :name %>
</div>

<div class="field">
    <%= f.label :date_due %>
    <%= f.datetime_field :date_due %>
</div>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
